<div class='container mt-5 mb-5'>
    <div class='row mb-5'>
        <div class="col-12 mb-3">
            <div class='card bg-info'>
                <div class="card-body">
                    {{#if victimImage}}
                    <img class="card-img-top mb-5" src="{{victimImage}}" alt="Card image cap">
                    {{else}}
                    <img class="card-img-top mb-5" src="/Images/missing.svg" width='250px' height='250px' alt="Card image cap">
                    {{/if}}
                    <div class="mb-2 card-header">
                        <h3 class="card-title">{{requiredCase.victimName}}</h3>
                    </div>
                    <p class="card-text">
                        {{requiredCase.victimInfo}}<br>
                        {{requiredCase.victimAge}}<br>
                        {{requiredCase.victimGender}}<br>
                        City - {{requiredCase.location.city}}<br>
                        State - {{requiredCase.location.state}}<br>
                        Investigating department - {{requiredCase.investigatingDepartment}}<br>
                        Status - {{requiredCase.status}}<br>
                        Reward - {{requiredCase.reward}}
                    </p>
                    <a href='/cases' class="btn btn-dark">
                        Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
