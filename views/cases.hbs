<nav class="navbar navbar-expand-lg navbar navbar-dark bg-info">
    <a href="#" class="navbar-brand">Missing Persons Portal</a>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse4">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse4">
        <div class="navbar-nav">
            <a href="/" class="nav-item nav-link">Home</a>
            <a href="#" class="nav-item nav-link">Blog</a>
            <a href="/cases" class="nav-item nav-link active">Cases</a>
            <a href="#" class="nav-item nav-link">Case Studies</a>

        </div>
        <ul class="nav navbar-nav ml-auto">
            <li>
                <a href="/addcase" class="btn btn-primary">
                    Add new case
                </a>
                <button class="btn btn-outline-light" onclick="window.location.href='/'">
                    <b>LOGOUT</b>
                </button>
            </li>
        </ul>
    </div>
</nav>
<div class="container-fluid mb-5 mt-5">
  {{#each allCases}}
  <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
    <div class="card bg-info">
        <div class="card-body">
            <img class="card-img-top mb-5" src="{{this.victimImage}}" alt="Card image cap">
            <div class="mb-2 card-header">
                <h3 class="card-title">{{victimName}}</h3>
                <a class="btn btn-dark" >
                    Learn more
                </a>
            </div>
            <p class="collapse card-text">
                {{victimInfo}}<br>
                {{victimAge}}<br>
                {{victimGender}}
            </p>
        </div>
    </div>
  </div>
{{else}}
<p>No cases to display</p>
{{/each}}
</div>